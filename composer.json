{
  "name": "sunkan/serverless-config-builder",
  "description": "Library to help with programmatically generate serverless.yml",
  "keywords": [
    "Serverless",
    "Generator"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Andreas Sundqvist",
      "email": "andreas@oak-valley.se"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-yaml": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "phpstan/phpstan": "^0.12.82"
  },
  "autoload": {
    "psr-4": {
      "Sunkan\\ServerlessConfigBuilder\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
  }
}
